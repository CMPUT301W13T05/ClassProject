<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/RelativeLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/water" >

    <ImageButton
        android:id="@+id/imageButton1"
        style="@style/AppTheme"
        android:layout_width="match_parent"
        android:layout_height="328dp"
        android:layout_above="@+id/takephoto"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:src="@drawable/wp" />

    <Button
        android:id="@+id/continue_to"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:text="@string/continue_to_recipe" />

    <Button
        android:id="@+id/accept"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/continue_to"
        android:layout_alignParentLeft="true"
        android:text="@string/accept" />

    <Button
        android:id="@+id/takephoto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/accept"
        android:layout_alignParentRight="true"
        android:layout_toRightOf="@+id/generate"
        android:longClickable="true"
        android:text="@string/TakePhoto" />

    <Button
        android:id="@+id/generate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/imageButton1"
        android:text="@string/generate" />

</RelativeLayout>